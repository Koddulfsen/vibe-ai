#!/bin/bash
#
# Task Master Agent System - One Command Launcher
# ===============================================
# 
# Super simple way to start the Task Master Agent System
# Automatically handles everything for the user
#
# Usage: ./run

set -e  # Exit on any error

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
WHITE='\033[1;37m'
NC='\033[0m' # No Color

# Fun banner
echo -e "${CYAN}"
echo "ğŸš€ ================================================================"
echo "   TASK MASTER AGENT SYSTEM - One Command Launcher"
echo "   Intelligent automation made ridiculously simple"
echo "================================================================${NC}"
echo

# Check if we're in the right directory
if [ ! -f "start.py" ]; then
    echo -e "${RED}âŒ Error: start.py not found${NC}"
    echo "Please run this script from the vibe.ai directory"
    exit 1
fi

echo -e "${BLUE}ğŸ“‹ Step 1: Checking Python...${NC}"
if command -v python3 &> /dev/null; then
    PYTHON_VERSION=$(python3 --version 2>&1 | cut -d' ' -f2)
    echo -e "${GREEN}âœ… Python 3 found: $PYTHON_VERSION${NC}"
else
    echo -e "${RED}âŒ Python 3 not found${NC}"
    echo "Please install Python 3.8 or higher"
    exit 1
fi

echo -e "${BLUE}ğŸ“¦ Step 2: Quick dependency check...${NC}"
# Check if we have basic packages
python3 -c "import sys, subprocess, os, pathlib" 2>/dev/null && echo -e "${GREEN}âœ… Basic packages OK${NC}" || {
    echo -e "${YELLOW}âš ï¸  Some basic packages missing - will auto-install${NC}"
}

echo -e "${BLUE}ğŸ¯ Step 3: Launching Task Master...${NC}"
echo

# Make start.py executable
chmod +x start.py

# Launch the interactive interface
echo -e "${WHITE}ğŸš€ Starting interactive interface...${NC}"
echo -e "${CYAN}   (Use Ctrl+C to exit anytime)${NC}"
echo

python3 start.py

echo
echo -e "${GREEN}ğŸ‘‹ Thanks for using Task Master Agent System!${NC}"